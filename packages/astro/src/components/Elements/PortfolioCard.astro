---
export interface Props {
	title: string;
	language: string;
	desc: string;
}

const { title, language, desc } = Astro.props;
---

<li
	class="bg-[#121213] duration-300 transition-all cursor-pointer sm:hover:scale-110 px-10 py-14 lg:max-xl:px-7 lg:max-xl:py-10"
>
	<div>
		<span class="text-[10px] leading-tight tracking-[3px]">{language}</span>
		<p class="text-2xl font-bold my-5">{title}</p>
		<p class="text-[0.95rem] leading-normal">{desc}</p>
	</div>
</li>
